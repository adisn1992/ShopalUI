<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".shoppingList_Activity">

    <RelativeLayout
        android:id="@+id/shoppingList_relative_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:id="@+id/shoppingList_scroll"
            android:layout_width="match_parent"
            android:layout_height="366dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:scrollbars="none">

            <TableLayout
                android:id="@+id/shoppingList_table"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginEnd="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginStart="16dp"
                android:isScrollContainer="true"
                android:stretchColumns="*"
                app:layout_constraintBottom_toBottomOf="@+id/scrollView2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.515"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/scrollView2">

                <TableRow
                    android:id="@+id/shoppingList_head_row"
                    android:layout_width="match_parent"
                    android:layout_height="12dp">

                </TableRow>

            </TableLayout>
        </ScrollView>

        <Button
            android:id="@+id/quantityButton"
            android:layout_width="126dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/shoppingList_scroll"
            android:layout_marginStart="42dp"
            android:text="change quantities" />

        <Button
            android:id="@+id/purchaseButton"
            android:layout_width="126dp"
            android:layout_height="55dp"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/shoppingList_scroll"
            android:layout_marginEnd="42dp"
            android:text="purchase" />

        <TextView
            android:id="@+id/shoppingList_text"
            android:layout_width="269dp"
            android:layout_height="38dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:text="stock should appear her" />

    </RelativeLayout>
</LinearLayout>